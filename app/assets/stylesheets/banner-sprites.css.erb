//= depend_on_asset "banner-spritesheet.png"

.banner-sprite {
    background-image: url(<%= asset_path('banner-spritesheet.png') %>);
    background-repeat: no-repeat;
    display: inline-block;
}

.banner-sprite-banner_neutral {
    width: 21px;
    height: 21px;
    background-position: -5px -5px;
}

.banner-sprite-banner_alliance {
    width: 21px;
    height: 21px;
    background-position: -36px -5px;
}

.banner-sprite-banner_horde {
    width: 21px;
    height: 21px;
    background-position: -67px -5px;
}
