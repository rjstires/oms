<% @modal ||= false %>
<% @remote ||= false %>
<%= simple_form_for(@team, remote: @remote) do |f| %>
<div class="form-inputs">
	<%= f.input :name %>
	<%= f.input :name_alias %>
	<%= f.association :region %>
	<%= f.input :realm %>
	<%= f.association :faction %>
	<%= f.input :payment_address %>
	<%= f.association :payment_type %>
	<%= f.association :team_status %>
	<%= f.hidden_field :modal, :value => @modal if @modal %>
	<%= f.button :submit, 'Save' %>
</div>
<% end %>