<div id="customerTotalsCard">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Order Totals</h3>
    </div>
    <div class="table-responsive">
      <table class="table table-hover">
        <tbody>
          <tr>
            <th># Sales</th>
            <th>Avg. Sale</th>
            <th>Total Sales</th>
          </tr>
          <tr>
            <td><%= @customer_count_of_sales %></td>
            <td><%= number_to_currency @customer_average_of_sales %></td>
            <td><%= number_to_currency @customer_sum_of_sales %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="panel-footer">
      <small><a href="#">View More</a></small>
    </div>
  </div>
</div>