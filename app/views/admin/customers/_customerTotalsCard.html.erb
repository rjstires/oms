<div id="customerTotalsCard">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Order Totals</h3>
    </div>
    <div class="table-responsive">
      <table class="table table-hover">
        <tbody>
          <tr>
            <th># Sales</th>
            <th>Avg. Sale</th>
            <th>Total Sales</th>
          </tr>
          <tr>
            <td>
              <%= @customers_completed_orders.count(:sale) %>
            </td>
            <td>
              <%= number_to_currency @customers_completed_orders.average(:sale) %>
            </td>
            <td>
              <%= number_to_currency @customers_completed_orders.sum(:sale) %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="panel-footer">
      <small><a href="#">View More</a></small>
    </div>
  </div>
</div>
