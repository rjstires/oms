
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2>Categories</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= link_to '<i class="fa fa-plus"></i> New'.html_safe, new_admin_category_path, :class => 'btn btn-primary btn-sm pull-right' %>    
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'category', collection: @categories %>
      </tbody>
    </table>
  </div>
</div>
