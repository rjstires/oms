		<%= simple_form_for([:admin, @product]) do |f| %>
		    <div class="form-inputs">
		    <%= f.input :description %>
		    <%= f.association :category %>
		    <%= f.association :zone %>
		    <%= f.association :difficulty %>
		    <%= f.association :loot_option %>
		    <%= f.association :mount %>
		    <%= f.association :play_style %>
		    
		  </div>
			<div class="btn-group">
				<%= f.button :submit, :class => "btn btn-primary btn-sm" %>
				<%= yield :buttons %>
			</div>
		<% end %>		