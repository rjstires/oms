<br>
<div class="col-md-2">
  <%= active_link_to 'All', url_for(params.except(:status)), :active => :exact, class: 'btn btn-primary btn-md btn-block'%>
  <% @statuses.each do |status| %>
  <%= active_link_to status.display_name,
    safe_params(:status => status.id),
    :active => :exact,
    class: 'btn btn-primary btn-md btn-block'
  %>
  <% end %>
</div>
<div class="col-md-10">
  <%= link_to 'New Lead', new_lead_path if can? :create, Lead %>
  <table class="table table-striped table-hover order-lines">
    <thead>
      <tr>
        <th>Order</th>
        <th>Product</th>
        <th>Character</th>
        <th>Payment status</th>
        <th>Sale</th>
        <th>Merchant fee</th>
        <th>Site fee</th>
        <th>Contractor payment</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.order %></td>
        <td><%= lead.product.display_name %></td>
        <td><%= lead.character.display_name %></td>
        <td><%= lead.payment_status.display_name %></td>
        <td><%= number_to_currency(lead.sale) %></td>
        <td><%= number_to_currency(lead.merchant_fee) %></td>
        <td><%= number_to_currency(lead.site_fee) %></td>
        <td><%= number_to_currency(lead.contractor_payment) %></td>
        <td>
          <div class="dropdown">
            <button class="btn btn-xs dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              <i class="glyphicon glyphicon-cog"></i> <span class="caret"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
              <%= content_tag :li, (link_to 'Show', lead_path(lead)) if can? :read, lead %>
              <%= content_tag :li, (link_to 'Edit', edit_lead_path(lead)) if can? :update, lead  %>
              <%= content_tag :li, (link_to 'Destroy', lead_path(lead), method: :delete, data: { confirm: 'Are you sure?' }) if can? :destroy, lead  %>
            </ul>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
