<%= simple_form_for(@lead) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :order %>
    <%= f.association :product, collection: @products,
                  prompt: 'Select a Product',
                  input_html: { class: 'chosen-select' } %>
    <%= f.association :customer,
                  prompt: 'Select a Customer',
                  input_html: { class: 'chosen-select' } %>
    <%= f.association :character, collection: @characters,
                  prompt: 'Select a Character',
                  input_html: { class: 'chosen-select' }  %>
    <%= f.association :payment_status,
                  prompt: 'Select a Payment Status',
                  input_html: { class: 'chosen-select' }  %>
    <%= f.input :sale %>
    <%= f.input :merchant_fee %>
    <%= f.input :site_fee %>
    <%= f.input :contractor_payment %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
