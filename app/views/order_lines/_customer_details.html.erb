<div class="modal fade" id="customer_modal_<%= customer.id %>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Customer Details</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
            <span style="font-weight: bold;">Email:</span> <%= mail_to customer.email %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
            <span style="font-weight: bold;">Battle Tag:</span> <%= customer.try(:battle_tag) %>
          </div>
        </div>
        <% if customer.skype.present? %>
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
            <span style="font-weight: bold;">Skype:</span> <%= customer.skype %>
          </div>
        </div>
        <% end %>
        <% if current_user.admin? %>
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
            <%= link_to "More Details", admin_customer_path(customer) %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
