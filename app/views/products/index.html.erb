<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Category</th>
      <th>Zone</th>
      <th>Play style</th>
      <th>Loot option</th>
      <th>Mount</th>
      <th>Difficulty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.display_name %></td>
        <td><%= product.category.display_name %></td>
        <td><%= product.zone.display_name %></td>
        <td><%= product.play_style.display_name %></td>
        <td><%= product.try(:loot_option).display_name %></td>
        <td><%= product.mount.display_name %></td>
        <td><%= product.difficulty.display_name %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

