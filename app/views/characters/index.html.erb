<p id="notice"><%= notice %></p>

<h1>Listing Characters</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Spec</th>
      <th>Armor type</th>
      <th>Classification</th>
      <th>Primary stat</th>
      <th>Tier token</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.display_name %></td>
        <td><%= character.armor_type.display_name %></td>
        <td><%= character.classification.display_name %></td>
        <td><%= character.primary_stat.display_name %></td>
        <td><%= character.tier_token.display_name %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

