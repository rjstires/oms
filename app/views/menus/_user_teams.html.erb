<% if user_signed_in? && current_user.approved_teams.any? %>
<li><a href="#"><i class="fa fa-trophy"></i><span>My Teams</span></a>
  <ul class="sub-menu">
    <% current_user.approved_teams.order(name: :asc).each do |team| %>
    <%= content_tag :li, class: 'sub-nav' do %>
    <%= link_to team.display_name, "#" %>
    <%= content_tag :ul, class: 'sub-menu' do %>

    <%= nav_link('Dashboard', team, nil, 'dashboard') %>
    <%= nav_link('Sales', team_order_lines_path(team), nil, 'diamond') %>
    <%= nav_link('Schedule', team_events_path(team), nil, 'calendar') %>
    <% end %>
    <% end %>
    <% end %>
  </ul>
</li>
<% end %>
