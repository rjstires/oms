<% if user_signed_in? %>
<li><a href="#"><i class="fa fa-calendar"></i>  Events</a>
	<ul class="list-unstyled">

		<% if current_user.admin? %>
		<%= content_tag :li, class: 'sub-nav' do %>
		<%= link_to 'View Events', admin_events_path %>
		<% end %>
		<% end %>

		<% if current_user.approved_teams.any? %>
		<% current_user.approved_teams.each do |team| %>
		<%= content_tag :li, class: 'sub-nav' do %>
		<%= link_to team.display_name, team_events_path(team) %>
		<% end %>
		<% end %>
		<% else %>
		<li class="sub-nav">no teams</li>
		<% end %>
	</ul>
</li>
<% end %>