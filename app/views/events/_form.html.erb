<div class="modal-header">
  <h3><%= @page_title || 'Event' %></h3>
  <button type="button" class="close md-close" data-dismiss="modal" aria-hidden="true">&times;</button>
</div>
<%= form_for([@team, @event], remote: true, html: {class:'form-horizontal', role: 'form'}) do |f| %>
<div class="modal-body form">
               <div class="alert alert-info alert-white rounded">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <div class="icon"><i class="fa fa-info-circle"></i></div>
                All times must be Easter Standard Time!
               </div>
  <div class="form-group">
    <%= f.label :event_timestamp, 'Event Start', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.text_field :event_timestamp, class: 'form-control datetime' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :category_id, 'Category', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.collection_select :category_id, Category.all.order(name: :asc), :id, :display_name, {prompt: 'Category'}, {class: 'form-control select2'} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :zone_id, 'Zone', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.collection_select :zone_id, Zone.all.order(name: :asc), :id, :display_name, {prompt: 'Zone'}, {class: 'form-control select2'} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :difficulty_id, 'Difficulty', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.collection_select :difficulty_id, Difficulty.all.order(name: :asc), :id, :display_name, {prompt: 'Difficulty'}, {class: 'form-control select2'} %>
    </div>
  </div>
</div>
<div class="modal-footer">
  <%= f.button 'Create Event', class: 'btn btn-primary' %>
</div>
<% end %>
