<%= simple_form_for([@team, @event]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :cutoff_timestamp, :as => :string, :input_html => {class: 'form-control datetimepicker'} %>
    <%= f.input :event_timestamp, :as => :string, :input_html => {class: 'form-control datetimepicker'} %>
    <%= f.association :character %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
