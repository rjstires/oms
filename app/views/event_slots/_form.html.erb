<%= simple_form_for(@event_slot) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :event %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.association :character %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
